@model ELearningApp.Models.Course
@{
    ViewData["Title"] = "GetCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-4">
        @Html.HiddenFor(c => c.Id)

        <h2>@Html.DisplayFor(c => c.Name)</h2>

        <div class="row">
            <div class="col-lg-12">
                @Html.DisplayNameFor(c => c.Link)
                @Html.DisplayFor(c => c.Link) 
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @Html.LabelFor(c => c.Description);
                @Html.DisplayFor(c => c.Description)
            </div>
        </div>

    </div>
</div>
