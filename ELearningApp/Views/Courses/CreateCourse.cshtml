@model ELearningApp.Models.Course
@{
    ViewData["Title"] = "CreateCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj kurs</h2>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("CreateCourse", "Courses"))
        {
            <div class="form-group">
                @Html.LabelFor(c => c.Name)
                @Html.TextBoxFor(c => c.Name)
                @Html.ValidationMessageFor(c => c.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Link)
                @Html.TextBoxFor(c => c.Link)
                @Html.ValidationMessageFor(c => c.Link)
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Description)
                @Html.TextAreaFor(c => c.Description)
                @Html.ValidationMessageFor(c => c.Description)
            </div>

            @Html.HiddenFor(c => c.Id)
            @Html.AntiForgeryToken()
            <input type="submit" asp-route-returnUrl="@Url.Action("AllCourses", "Courses", new { area = "" })" class="btn btn-primary" formmethod="post" value="Dodaj kurs" />
        }
        <div class="row">
            <div class="col-lg-12">
                <button asp-action="AllCourses" asp-controller="Courses" class="btn btn-default">Nazad</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml");
}