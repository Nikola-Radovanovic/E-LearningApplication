@model ELearningApp.Models.School
@{
    ViewData["Title"] = "UpdateSchool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Izmeni podatke o školi</h2>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("UpdateSchool", "Schools"))
         {
            <div class="form-group">
                @Html.LabelFor(s => s.Name)
                @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Name)

            </div>
                @Html.HiddenFor(s => s.Id)
                @Html.AntiForgeryToken()
            <input type="submit" class="btn btn-primary" value="Sačuvaj" />
         }
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml");
}
