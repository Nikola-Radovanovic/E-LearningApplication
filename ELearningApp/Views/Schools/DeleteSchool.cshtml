@model ELearningApp.Models.School
@{
    ViewData["Title"] = "DeleteSchool";
    Layout = "~/Views/Shared/_DataTablesLayoutPartial.cshtml";
}

<h3>Da li ste sigurni da želite da izbrišete školu <strong>"@Html.DisplayFor(model => model.Name)"</strong>?</h3>
<hr />
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("DeleteSchool", "Schools"))
        {
            @Html.HiddenFor(c => c.Id)
            <form asp-action="DeleteSchool">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        }
    </div>
</div>