@model ELearningApp.Models.User
@{
    ViewData["Title"] = "UserLogin";
    Layout = "~/Views/Shared/_DataTablesLayoutPartial.cshtml";

}

<h2>Prijava</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["UserLoginFailed"] != null)
        {
            <p class="alert alert-danger">@TempData["UserLoginFailed"]</p>
        }
            <form method="post" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(c => c.Email)
                    @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.Email)
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.Password)
                    @Html.PasswordFor(c => c.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.Password)

                </div>
                
                @Html.HiddenFor(c => c.Id)
                <input type="submit" value="Prijavi se" class="btn btn-primary " />
                <a asp-action="Register" class="btn btn-success">Registruj se</a>
            </form>
    </div>
</div>
@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

} 